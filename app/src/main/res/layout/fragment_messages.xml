<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.issouprojects.ubirb.fragments.MessagesFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/colorPrimary">

            <Button
                android:id="@+id/tous"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="Tous"
                android:textColor="@android:color/darker_gray" />

            <Button
                android:id="@+id/offre"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="0"
                android:background="@android:color/transparent"
                android:text="J'offre"
                android:textColor="@android:color/darker_gray" />

            <Button
                android:id="@+id/recois"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_column="2"
                android:layout_row="0"
                android:background="@android:color/transparent"
                android:text="Je reÃ§ois"
                android:textColor="@android:color/darker_gray" />

        </GridLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgPaul"
                android:layout_width="45dp"
                android:layout_height="45sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="21dp"
                android:src="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/imgKevin"
                android:layout_width="45dp"
                android:layout_height="45sp"
                android:layout_alignLeft="@+id/imgPaul"
                android:layout_alignStart="@+id/imgPaul"
                android:layout_below="@+id/imgPaul"
                android:layout_marginTop="21dp"
                android:src="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/imgPierre"
                android:layout_width="45dp"
                android:layout_height="45sp"
                android:layout_alignLeft="@+id/imgKevin"
                android:layout_alignStart="@+id/imgKevin"
                android:layout_below="@+id/txtKevin"
                android:layout_marginTop="24dp"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/nomPaul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgPaul"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/imgPaul"
                android:layout_toRightOf="@+id/imgPaul"
                android:text="Paul Dupont"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPaul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/nomPaul"
                android:layout_alignStart="@+id/nomPaul"
                android:layout_below="@+id/nomPaul"
                android:text="Ca te va dans 10 minutes?"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nomKevin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtPaul"
                android:layout_alignStart="@+id/txtPaul"
                android:layout_alignTop="@+id/imgKevin"
                android:text="Jean Kevin"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtKevin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgKevin"
                android:layout_alignLeft="@+id/nomKevin"
                android:layout_alignStart="@+id/nomKevin"
                android:text="Ouais mdrrrr" />

            <TextView
                android:id="@+id/nomPierre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtKevin"
                android:layout_alignStart="@+id/txtKevin"
                android:layout_alignTop="@+id/imgPierre"
                android:text="Pierre Lacour"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtPierre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgPierre"
                android:layout_alignLeft="@+id/nomPierre"
                android:layout_alignStart="@+id/nomPierre"
                android:text="ok ba on se voit demain" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>